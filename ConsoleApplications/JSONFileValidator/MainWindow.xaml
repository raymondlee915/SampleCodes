<Window x:Class="JSONFileValidator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JSON Validator" Height="550" Width="600" Topmost="True">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBox Name="tbFilePath" Width="400" Height="30"/>
            <Button Name="btnFolderOpener" Click="btnFolderOpener_Click" Width="100" Height="28" Content="Chose Folder" Margin="10"/>
            <Button Content="Go" Width="60" Height="28" Click="btnGo_Click" />
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" Height="370">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="ErrorPanel" Orientation="Vertical">

                </StackPanel>
            </ScrollViewer>

        </Border>
    </StackPanel>
</Window>
